{
  "name": "@venkatramachandran/version-app",
  "version": "1.0.18",
  "description": "ANZ Version App",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "cm": "git-cz",
    "start": "npm run build && gitsha=$(git rev-parse --short HEAD) node build/index",
    "build": "tsc",
    "lint": "eslint -c .eslintrc.json",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf build",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/venkatramachandran/version-app"
  },
  "keywords": [],
  "author": "Venkat Ramachandran",
  "license": "ISC",
  "files": [
    "build"
  ],
  "bugs": {
    "url": "https://github.com/venkatramachandran/version-app/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@venkatramachandran/version-app"
  },
  "homepage": "https://github.com/venkatramachandran/version-app#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "*",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo ${nextRelease.version} >> .version"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.1",
    "@semantic-release/npm": "^7.1.1",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
